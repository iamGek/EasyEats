<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_2">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Italian Cuisine"
        android:fontFamily="@font/brownista_style"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        android:layout_marginEnd="16dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/irecipe_caprese"
                android:background="@drawable/rounded_shape"
                android:alpha="0.85"
                android:clickable="true"/>

            <TextView
                android:id="@+id/mainTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="10"
                android:text="Caprese Salad"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:fontFamily="@font/font_style"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/irecipe_risotto"
                android:background="@drawable/rounded_shape"
                android:alpha="0.85"
                android:clickable="true"/>

            <TextView
                android:id="@+id/mainTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="10"
                android:text="Risotto ala Milanese"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:fontFamily="@font/font_style"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
